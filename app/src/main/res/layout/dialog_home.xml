<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="304dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:backgroundTint="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/badge_count_tx"
        android:layout_width="93dp"
        android:layout_height="16dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:text="현재 획득 배지 1개"
        android:textAlignment="center"
        android:textColor="#FB3E25"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/badge_pic"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/join_badge" />

    <TextView
        android:id="@+id/dialog_complete_tx"
        android:layout_width="142dp"
        android:layout_height="28dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="224dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:text="가입을 완료했어요!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_explain_tx"
        android:layout_width="225dp"
        android:layout_height="32dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="258dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:text="Lifolio를 만들어갈 첫 단계를 완료한 기념으로 \n 가입 축하 배지를 드릴게요."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_badge_btn"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="304dp"
        android:fontFamily="@font/roboto"
        android:background="@drawable/dialog_badge_background"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="배지 보기"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_ok_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="348dp"
        android:fontFamily="@font/roboto"
        android:background="#00ff0000"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="확인"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>