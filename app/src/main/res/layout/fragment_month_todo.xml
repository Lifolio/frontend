<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeekTodoFragment">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/todo_checkbox">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/todo_checkbox_shape"
                android:button="@android:color/transparent"
                tools:ignore="MissingConstraints">

            </CheckBox>

            <TextView
                android:id="@+id/this_year_goal_tx"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto_medium"
                android:text="이번 달의 할 일 1"
                android:textColor="#000000"
                android:textSize="12sp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_dot_plan">

            </androidx.appcompat.widget.AppCompatImageButton>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>