<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_view_way2_content1"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/chacco_pic1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_view_way2_content2"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/chacco_pic2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_view_way2_content1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_view_way2_content3"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/chacco_pic3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_view_way2_content1"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_view_way2_content4"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/chacco_pic4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_view_way2_content3"
        app:layout_constraintTop_toBottomOf="@+id/fragment_view_way2_content1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_view_way2_content5"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/chacco_pic5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_view_way2_content3"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_view_way2_content6"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/chacco_pic6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_view_way2_content5"
        app:layout_constraintTop_toBottomOf="@+id/fragment_view_way2_content3" />


</androidx.constraintlayout.widget.ConstraintLayout>