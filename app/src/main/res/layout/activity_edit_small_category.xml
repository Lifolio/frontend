<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category.EditSmallCategoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_big_category_const"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#f8f8fa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/edit_big_category_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/arrow_back_ios"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리 수정"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/edit_big_category_switchtitle_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리 분류"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_big_category_const"
        app:layout_constraintStart_toStartOf="parent"
        />

    <RelativeLayout
        android:id="@+id/edit_big_category_switchlayout_rel"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:background="@drawable/category_switch"
        android:padding="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_big_category_switchtitle_tx">


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/edit_big_category_selectsize_swch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:checked="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:thumb="@drawable/thumb_selector_disabled"
            app:switchMinWidth="140dp"
            app:track="@drawable/track_selector" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/edit_big_category_left_tx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="크게"
                android:textColor="#707070"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/edit_big_category_right_tx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="작게"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/add_categoty_frame_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_big_category_switchlayout_rel"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/small_category_surcategorytitle_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상위 카테고리"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@id/edit_big_category_switchlayout_rel"
        app:layout_constraintStart_toStartOf="parent"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/small_category_spinnerLay_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/small_category_surcategorytitle_tx"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <Spinner
            android:id="@+id/small_category_spinner_sp"
            android:background="@drawable/category_spinner_background"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_width="360dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/small_category_name_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리명"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/small_category_spinnerLay_rel"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/small_category_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:ems="100"
        android:hint="카테고리 이름"
        android:backgroundTint="#dbdbdb"
        android:textSize="16sp"
        android:inputType="text"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:textColorHint="#dbdbdb"
        app:layout_constraintTop_toBottomOf="@id/small_category_name_tx"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/big_category_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_submit_round_button"
        android:text="수정 완료"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>